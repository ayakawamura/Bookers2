<!--コメント内容-->
<% book.book_comments.each do |book_comment| %>
<table class="pb-3">
  <tr>
    <td class= "pr-3">
      <%= attachment_image_tag book_comment.user,:profile_image,:fill,50,50,format: 'jpeg', fallback: "no_image.jpg",size:"50x50"%>
      <br/><%= link_to book_comment.user.name,user_path(book_comment.user.id) %>
    </td>
    <td><%= book_comment.comment %></td>
    <td><%= link_to "Destroy",book_book_comment_path(book_comment.book,book_comment),method: :delete,remote: true,class:"btn btn-danger btn-sm"%></td>
  </tr>
</table>
<%end%>

<!--コメントフォーム-->
<%= form_with(model:[book, book_comment], remote: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントを入れてね", class:"form-control" %>
  <%= f.submit "送信する" %>
<% end %>