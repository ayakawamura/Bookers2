<div class="col-lg-5 mx-auto pt-3">
	<h1>Event Mail</h1>
	
	<%= form_with url:group_send_mail_path(@group.id),method: :get, local: true do |f| %>
		<div class="pb-3">
			<%= f.label :title ,"Title" %>
			<%= f.text_field :mail_title ,class:"form-control" %>
		</div>
		
		<div class="pb-3">
			<%= f.label :content ,"Content" %>
			<%= f.text_area :mail_content ,class:"form-control" %>
		</div>
		<div class="pb-3 text-right">
			<%=f.submit "送信",class:"btn btn-success btn-sm"%>
		</div>
	
	<%end%>
</div>