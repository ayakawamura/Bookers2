<div class="container">
  <div class="row mx-auto">

      <div class="col-md-3">
        <%= render "books/profile_new",user:@user, book:@book ,newbook:@newbook%>
      </div>

      <div class="col-md-8 pt-3 offset-md-1">
        <!--投稿一覧-->
        <h1>Books</h1>

        <table class="table table-hover table-inverse" >
          <thead>
            <tr>
              <th style="width: 10%"></th>
              <th style="width: 40%">Title</th>
              <th style="width: 50%">Opinion</th>
            </tr>
          </thead>
          
          </tbody>
            <% @books.each do |book| %>
            <tr>
              <th><%= link_to user_path(book.user.id) do%>
                <%=attachment_image_tag book.user,:profile_image,:fill,50,50,format: 'jpeg', fallback: "no_image.jpg",size:"50x50" %>
                <%end%>
              </th>
              <th><%=link_to book.title, book_path(book.id) %></th>
              <th><%=book.body %></th>
            </tr>
            <%end%>
          </tbody>

        </table>

      </div>


  </div>
</div>
