<div class="container">
  <div class="row mx-auto">

      <div class="col-lg-4">

        <%= render "books/profile_new",user:@user %>




      </div>



      <div class="col-lg-6">

        <!--投稿一覧-->
        <h1>Books</h1>

        <table class="table table-striped" >
          <tbody>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>

            <% @books.each do |book| %>

            <tr>
              <th><%=attachment_image_tag @book.user,:profile_image,:fill,10,10,format: 'jpeg', fallback: "no_image.jpg" %></th>
              <th><%=link_to book.title, book_path(book.id) %></th>
              <th><%=book.body %></th>
            </tr>

            <%end%>

          </tbody>

        </table>

      </div>


  </div>
</div>
