<!--１つの投稿のshowページ-->

<!--投稿成功メッセージ-->
<p class="text-success"><%= flash[:notice_create] %></p>
<!--投稿更新メッセージ-->
<p class="text-success"><%= flash[:notice_update] %></p>

<div class="container mt-3">
  <div class="row mx-auto">
    <div class ="col-lg-4">
      
      <%= render "books/profile_new",user:@user, book:@newbook %>

     
    </div>
    
    <div class="col-lg-6">
      
      <h1>Book detail</h1>
      
        <table class="table table-striped" >
          <tbody>         
                <tr>
                  <td><%#=attachment_image_tag @user,:profile_image,:fill,3,3,format: 'jpeg', fallback: "no_image.jpg" %>
                      <%= image_tag("no_image.jpg")%><br/>
                      <%= link_to @user.name,user_path(@user.id) %>
                  </td>
                  <td><%=link_to @book.title,book_path(@book.id) %></td>
                  <td><%=@book.body%></td>
                  <% if @user==current_user %>
                    <td><%= link_to "Edit",edit_book_path(@book.id),class:"btn btn-success btn-sm" %></td>
                    <td><%= link_to "Destroy",book_path(@book.id),method: :delete,class:"btn btn-danger btn-sm" %></td>
                  <%end%>
                </tr>
                  
          </tbody>
                  　
        </table>
    </div>
  </div>
</div>
                