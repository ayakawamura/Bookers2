<h1>User info</h1>
          <%= image_tag("no_image.jpg")%>
          
          <table class="table table-striped">
            <tbody>
                <tr>
                  <th>name</th>
                  <th><%= user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= user.introduction %></th>
                </tr>
                
                
            </tbody>
          </table>
          
          <!--ユーザー編集ボタン-->
                <%if user.id==current_user.id %>
                  <%=link_to edit_user_registration_path,class:"btn btn-outline-secondary btn-block mb-3" do %>
                    <i class="fas fa-user-cog"></i>
                  <%end%>
                <%end%>
          
         
        <h1>New book</h1>
        
          <%= form_with model:@book,local:true do |f| %>
            <div class="mb-3">
                <label for="title">Title</label><br/>
                <%=f.text_field :title %>
            </div>
            
            <div class="mb-3">
                <label for="body">Opinion</label><br/>
                <%=f.text_area :body %>
            </div>
            
            <%=f.submit "Create Book" ,class:"btn btn-success btn-x"%>
            
          <%end%> 
        