<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!--bootstrap-->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

          <!--bookersボタン-->
          <a class="navbar-brand " href="/">
            <%=link_to "Bookers",root_path %>
          </a>

          <!--naviボタン-->
          <button class="navbar-toggler" type="button" date-toggle="collapse" date-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigaition">
            <span class="navbar-togger-icon"></span>
          </button>

          <!--ボタンの中に隠す要素 任意のidを指定する-->
          <div class="collapse navbar-collapse" id="navbar">
            <ul class="navbar-nav ml-auto">

              <% if user_signed_in? %>
                <li>
                  <%= link_to "Home", user_path(current_user.id),class:"nav-link text-white"%>
                </li>
                <li>
                  <%= link_to "Users", user_registration_path %>
                </li>
                <li>
                  <%= link_to "Books", books_path %>
                </li>
                <li>
                  <%= link_to "logout", user_registration_path, method: :delete %>
                </li>

              <% else %>

                <li>
                  <%= link_to "Home", root_path %>
                </li>
                <li>
                  <%= link_to "About", homes_about_path %>
                </li>
                <li>
                  <%= link_to "sign up", new_user_registration_path %>
                </li>
                <li>
                  <%= link_to "login", new_user_session_path %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>


    <%= yield %>


    <footer>
      <div class="container mt-5">
        <div class="row">
          <p class="mx-auto">CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>

  </body>

</html>