<h1>Books</h1>
  <table class="table table-hover table-inverse" >
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% books.each do |book| %>
        <tr>
          <td><%=link_to user_path(user.id) do %>
            <%=attachment_image_tag user,:profile_image,:fill,50,50,format: 'jpeg', fallback: "no_image.jpg",size:"50x50" %>
            <%end%>
          </td>
          <td><%= link_to book.title, book_path(book.id)%></td>
          <td><%=book.body %></td>
          <td>
            <% if book.tag.present? %>
              <%= link_to book.tag ,search_path(word: book.tag, model: "Tag", search: "perfect_match")%>
            <%end%>
          </td>

          <!--コメント数カウント-->
          <td>コメント数:<%= book.book_comments.count %></td>
          <td>閲覧数:<%= book.view_counts.count %></td>
          <td><%= render "books/rate_jquery", book: book%></td>
        </tr>
      <%end%>
    </tbody>
  </table>
