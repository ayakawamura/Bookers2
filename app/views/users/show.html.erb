<!--ユーザーごとの投稿画面-->
<!--user情報のupdete成功メッセージ-->
<p class="text-success"><%= flash[:user_update] %></p>

<div class="container mt-3">
  <div class="row mx-auto">
    
    <div class ="col-md-3">
      <!--部分テンプレート-->
      <%= render "books/profile_new",user:@user ,book:@book ,newbook:@newbook %>
    </div>

    <div class="col-md-8 pt-3 offset-md-1">

      <h1>Books</h1>
        <table class="table table-hover table-inverse" >
          <thead>
            <tr>
              <th style="width: 20%"></th>
              <th style="width: 30%">Title</th>
              <th style="width: 50%">Opinion</th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%=link_to user_path(@user.id) do %>
                  <%=attachment_image_tag @user,:profile_image,:fill,50,50,format: 'jpeg', fallback: "no_image.jpg",size:"50x50" %>
                  <%end%>
                </td>
                <td><%= link_to book.title, book_path(book.id)%></td>
                <td><%=book.body %></td>
              </tr>
            <%end%>
          </tbody>

        </table>
    </div>

  </div>
</div>