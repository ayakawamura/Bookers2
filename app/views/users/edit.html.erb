		<div class="col-10 col-lg-6 mx-auto">

			<h1>Users info</h1>
			
			<!--更新失敗メッセージ-->
			<%= render "layouts/error",model:@user %>

			<!--入力フォーム-->
				<%= form_with model:@user,local:true do |f| %>
				  <div class="mb-3">
					<label for="name">Name</label><br/>
					<%= f.text_field :name %>
			      </div>
					
				  <div class="mb-3">
					<label for="profile_image">Image</label><br/>
					<%= f.attachment_field :profile_image ,placeholder: "プロフィール画像"%>
				  </div>
					
				  <div class="mb-3">
					<label for="introduction">Introduction</label><br/>
					<%= f.text_area :introduction %>
				  </div>
					
					<%= f.submit "Update User",class:"btn btn-secondary btn-x" %>
				<%end%>
					
		</div>

