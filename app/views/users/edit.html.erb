<div class="container mt-3">
	<div class="row">
		<div class="col-10 col-lg-6 mx-auto">

			<h1>Users info</h1>
			
			<!--更新失敗メッセージ-->
			<div class="text-danger mb-3">
			  <% if @user.errors.any?%>
			    <h2><%=@user.errors.count%>error prohibited this obj from being saved:</h2>
			    <% @user.errors.full_messages.each do |message| %>
			      <li><%= message %></li>
			    <%end%>
			  <%end%>
			</div>
			
			<!--入力フォーム-->
				<%= form_with model:@user,local:true do |f| %>
				  <div class="mb-3">
					<label for="name">Name</label><br/>
					<%= f.text_field :name %>
			      </div>
					
				  <div class="mb-3">
					<label for="profile_image">Image</label><br/>
					<%= f.attachment_field :profile_image ,placeholder: "プロフィール画像"%>
				  </div>
					
				  <div class="mb-3">
					<label for="introduction">Introduction</label><br/>
					<%= f.text_area :introduction %>
				  </div>
					
					<%= f.submit "Update User",class:"btn btn-secondary btn-x" %>
				<%end%>
					
		</div>
	</div>
</div>
				
