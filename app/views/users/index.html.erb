<div class="container">
  <div class="row mx-auto">
      
    <div class="col-lg-4">
      
      <%= render "books/profile_new",user:@user %>
    
          
    </div>
      
      
      
    <div class="col-lg-6">
        

      <h1>Users</h1>
        
        <table class="table table-striped" >
          <tbody>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
            
            <% @users.each do |user| %>
            
            <tr>
              <td><%=attachment_image_tag user,:profile_image,:fill,10,10,format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td><%=user.name %></td>
              <td><%=link_to "Show",user_path(user.id) %></td>
            </tr>
            
            <%end%>
            
          </tbody>
            
        </table>
    </div>
  </div>
</div>
          
     